@{
    ViewData["Title"] = "Top";
}

<div class="container mt-5">
    <!-- Welcome Card -->
    <div class="card shadow-lg border-0 mb-5">
        <div class="card-body d-flex justify-content-between align-items-center bg-gradient bg-primary text-white rounded-top p-4">
            <h4 class="fw-bold mb-0">Welcome, @ViewBag.User!</h4>
            <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-light fw-semibold">Logout</a>
        </div>
    </div>

    <!-- Accordion Card -->
    <div class="card shadow-lg border-0 mb-4">
        <div class="accordion" id="accordionExample">
            <div class="accordion-item border-0">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button bg-gradient text-dark fw-bold shadow-sm" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne">
                        Rate us here:
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show">
                    <div class="accordion-body bg-light rounded-bottom p-4">
                        <label for="exampleSelect" class="form-label fw-semibold text-dark">How you feel about our service?</label>
                        <select id="exampleSelect" class="form-select rounded-3" style="width:100%;">
                            <option value="1">Poor :(</option>
                            <option value="2">Average :|</option>
                            <option value="3">Good :)</option>
                            <option value="4">Better ;)</option>
                            <option value="5">Best <3</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#exampleSelect').select2();
        });
    </script>
}
